<% include ../partials/header %>
  <div class="container w-50 mt-4">
    <form action="/campgrounds" method="post">
      <h1 class="text-center text-info">Add new campground</h1>
      <div class="form-group">
        <label for="campground[title]">Title: </label>
        <input type="text" class="form-control" name="campground[title]" aria-describedby="titleHelp" placeholder="Enter title.">
      </div>
      <div class="form-group">
        <label for="campground[price]">Price: </label>
        <input type="number" class="form-control" name="campground[price]" placeholder="Enter price." min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="campground[img]">Image source: </label>
        <input type="url" class="form-control" name="campground[img]" placeholder="Image link">
      </div>
      <div class="form-group">
          <label for="campground[about]">About: </label>
          <textarea class="form-control" name="campground[about]" rows="6"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

<% include ../partials/footer %>
